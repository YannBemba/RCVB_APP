<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark_blue"
    tools:context=".forms.ConnexionActivity">


    <TextView
        android:id="@+id/tvTitreConnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/se_connecter"
        android:textColor="@color/bg_white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginTop="12dp"
        android:background="@color/bg_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitreConnexion" />

    <LinearLayout
        android:id="@id/linear_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/btn_connexion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/etEmailConnexion"
            android:layout_width="336dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="48dp"
            android:autofillHints="email"
            android:background="@drawable/edit_background_dark"
            android:drawableEnd="@drawable/ic_email"
            android:drawableTint="@color/bg_white"
            android:fontFamily="@font/poppins_semibold"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/bg_white" />

        <EditText
            android:id="@+id/etMdpConnexion"
            android:layout_width="336dp"
            android:layout_height="56dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="48dp"
            android:autofillHints="mdp"
            android:background="@drawable/edit_background_dark"
            android:drawableEnd="@drawable/ic_lock"
            android:drawableTint="@color/bg_white"
            android:fontFamily="@font/poppins_semibold"
            android:hint="@string/mdp"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/bg_white"
            android:textColorHint="@color/bg_white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_connexion"
        android:layout_width="321dp"
        android:layout_height="69dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/bg_white"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/connexion"
        android:textColor="@color/bg_dark_blue"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_connect" />

    <TextView
        android:id="@+id/tvMdpOublie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/mdp_oublie"
        android:textColor="@color/bg_white"
        app:layout_constraintBottom_toTopOf="@+id/ou_se_connecter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_connexion"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@id/tvInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/inscription"
        android:textColor="@color/bg_white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/ou_se_connecter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_connexion"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/ou_se_connecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/poppins"
        android:text="@string/connecter_api"
        android:textColor="@color/bg_white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_connexion" />

    <LinearLayout
        android:id="@+id/linear_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ou_se_connecter"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/bg_tranparent"
            android:contentDescription="@string/connexion"
            android:src="@drawable/google" />

        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/bg_tranparent"
            android:contentDescription="@string/connexion"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/btnTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/bg_tranparent"
            android:contentDescription="@string/connexion"
            android:src="@drawable/twitter" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>