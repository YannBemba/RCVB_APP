<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_dark_blue"
    tools:context=".onboarding.viewpager.ViewPagerFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/vp_inscription"
            style="@style/ButtonConnexion"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/inscription"
            android:textSize="15sp"
            android:textAlignment="center"
            app:cornerRadius="10dp"
            app:strokeColor="@color/dark_blue"
            app:elevation="10dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/vp_connexion"
            style="@style/ButtonConnexion"
            android:text="@string/connexion"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold"
            app:strokeColor="@color/dark_blue"
            app:cornerRadius="10dp"
            app:elevation="10dp"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="620dp" />

</androidx.constraintlayout.widget.ConstraintLayout>