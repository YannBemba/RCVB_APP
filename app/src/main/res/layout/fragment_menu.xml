<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_white"
    tools:context=".onboarding.fragments.MenuFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/club_card"
        android:layout_width="363dp"
        android:layout_height="193dp"
        android:layout_margin="20dp"
        android:layout_marginTop="70dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0.8dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/club"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:textColor="@color/bg_dark_blue"
                android:textSize="36sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/rugby_ball"
                android:contentDescription="@string/balle_de_rugby"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/boutique_card"
        android:layout_width="363dp"
        android:layout_height="193dp"
        android:layout_margin="20dp"
        android:layout_marginTop="88dp"
        app:cardBackgroundColor="@color/dark"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0.8dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/club_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/mastercard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/shop"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:textColor="@color/bg_white"
                android:textSize="36sp" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/workspace_card"
        android:layout_width="363dp"
        android:layout_height="193dp"
        android:layout_margin="20dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0.8dp"
        app:cardBackgroundColor="@color/bg_bluesky"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boutique_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/space"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:textColor="@color/bg_dark_blue"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/workspace"
                android:contentDescription="@string/balle_de_rugby"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>