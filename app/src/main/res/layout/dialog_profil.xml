<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark">


    <View
        android:id="@+id/viewround"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/view_top_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/viewblue"
            android:layout_width="50dp"
            android:layout_height="7dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/bg_dark_blue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNomProfil"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="44dp"
            android:hint="@string/nom"
            android:textColorHint="@color/bg_lightgrey"
            app:boxStrokeColor="@color/bg_dark_blue"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/bg_dark_blue"
            app:startIconDrawable="@drawable/ic_account_box"
            app:startIconTint="@color/bg_lightgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/bg_dark_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPrenomProfil"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="32dp"
            android:hint="@string/prenom"
            android:textColorHint="@color/bg_lightgrey"
            app:boxStrokeColor="@color/bg_dark_blue"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/bg_dark_blue"
            app:startIconDrawable="@drawable/ic_account_box"
            app:startIconTint="@color/bg_lightgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/bg_dark_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmailProfil"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="28dp"
            android:hint="@string/email"
            android:textColorHint="@color/bg_lightgrey"
            app:boxStrokeColor="@color/bg_dark_blue"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/bg_dark_blue"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/bg_lightgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/bg_dark_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTelProfil"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="28dp"
            android:hint="@string/tel"
            android:textColorHint="@color/bg_lightgrey"
            app:boxStrokeColor="@color/bg_dark_blue"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/bg_dark_blue"
            app:startIconDrawable="@drawable/ic_account_box"
            app:startIconTint="@color/bg_lightgrey">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/bg_dark_blue" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnEnregistrer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/enregistrer"
            android:textSize="17sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>