<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_round"
    android:backgroundTint="#FCB58E"
    tools:context=".onboarding.screens.FirstScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/cabin_bold"
        android:text="@string/first_part"
        android:textColor="@color/tv_dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:layout_margin="20dp"
            android:src="@drawable/boy"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="10dp"
            android:text="@string/first_presentation"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/bg_dark_blue"
            android:fontFamily="@font/poppins_semibold"/>

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@color/bg_dark_blue"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>