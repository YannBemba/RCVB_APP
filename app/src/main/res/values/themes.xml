<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RCVB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/bg_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_yellow</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonConnexion">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/bg_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/bg_dark_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>