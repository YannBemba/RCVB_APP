<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RCVB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/bg_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_yellow</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonConnexion">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/bg_dark_blue</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/bg_white</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="EditTextUI" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">50dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="Oval">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:background">@drawable/oval_view</item>
        <item name="layout_editor_absoluteX">217dp</item>
        <item name="layout_editor_absoluteY">620dp</item>
    </style>

</resources>